@model IEnumerable<PetShop.Models.Order>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<h1 class="mt-4">@ViewData["Title"]</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
    <li class="breadcrumb-item active">Danh sách Đơn hàng</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Tất cả đơn hàng
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Ngày đặt</th>
                    <th>Khách hàng</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.User.FullName</td>
                        <td class="text-danger fw-bold">@item.TotalAmount.ToString("N0") VNĐ</td>
                        <td>@item.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm">Xem chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>