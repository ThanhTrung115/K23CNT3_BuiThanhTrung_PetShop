@using Microsoft.AspNetCore.Http
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetShop Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="admin-wrapper">
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">PetShop</a>
            </div>
            <div class="admin-sidebar-menu">
                <div class="menu-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="menu-link @(currentController == "Dashboard" ? "active" : "")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-area="Admin" asp-controller="Pets" asp-action="Index" class="menu-link @(currentController == "Pets" ? "active" : "")">
                        <i class="fas fa-paw"></i> Quản lý Thú cưng
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="menu-link @(currentController == "Users" ? "active" : "")">
                        <i class="fas fa-users"></i> Quản lý Người dùng
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="menu-link @(currentController == "Orders" ? "active" : "")">
                        <i class="fas fa-file-invoice"></i> Quản lý Đơn hàng
                    </a>
                </div>
                <div class="menu-item mt-5">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link">
                        <i class="fas fa-arrow-left"></i> Về trang chính
                    </a>
                </div>
            </div>
        </nav>
        <div class="admin-content">
            <header class="d-flex justify-content-end align-items-center mb-4">
                <div class="user-info">
                    <span>Xin chào, @Context.Session.GetString("UserFullName")!</span>
                    <form class="d-inline ms-2" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Đăng xuất</button>
                    </form>
                </div>
            </header>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>