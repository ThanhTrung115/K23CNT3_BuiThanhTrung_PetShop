@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetShop Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/admin-custom.css" />
</head>
<body>
    <div class="admin-wrapper">
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <h3>PetShop Admin</h3>
            </div>
            <ul class="list-unstyled components">
                <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a asp-area="Admin" asp-controller="Pets" asp-action="Index"><i class="fas fa-paw"></i> Quản lý Thú cưng</a></li>
                <li><a asp-area="Admin" asp-controller="Users" asp-action="Index"><i class="fas fa-users"></i> Quản lý Người dùng</a></li>
                <li><a asp-area="Admin" asp-controller="Orders" asp-action="Index"><i class="fas fa-file-invoice"></i> Quản lý Đơn hàng</a></li>
            </ul>
            <div class="back-to-site">
                <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-arrow-left"></i> Về trang chính</a>
            </div>
        </nav>

        <div class="admin-content">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">@ViewData["Title"]</h1>
                <div class="user-info">
                    <span>Xin chào, @Context.Session.GetString("UserFullName")!</span>
                    <form class="d-inline ms-2" asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Đăng xuất</button>
                    </form>
                </div>
            </header>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>