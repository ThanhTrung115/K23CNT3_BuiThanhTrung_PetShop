@model PetShop.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="row">
    <div class="col-lg-3 col-md-6">
        <a asp-area="Admin" asp-controller="Pets" asp-action="Index" class="text-decoration-none">
            <div class="stat-card">
                <div class="stat-icon bg-primary"><i class="fas fa-paw"></i></div>
                <div class="stat-card-info">
                    <h5>Thú cưng</h5>
                    <span class="stat-number">@Model.PetCount</span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6">
        <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="text-decoration-none">
            <div class="stat-card">
                <div class="stat-icon bg-warning"><i class="fas fa-file-invoice"></i></div>
                <div class="stat-card-info">
                    <h5>Đơn hàng</h5>
                    <span class="stat-number">@Model.OrderCount</span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6">
        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="text-decoration-none">
            <div class="stat-card">
                <div class="stat-icon bg-success"><i class="fas fa-users"></i></div>
                <div class="stat-card-info">
                    <h5>Người dùng</h5>
                    <span class="stat-number">@Model.UserCount</span>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="stat-icon bg-danger"><i class="fas fa-dollar-sign"></i></div>
            <div class="stat-card-info">
                <h5>Doanh thu</h5>
                <span class="stat-number">@Model.TotalRevenue.ToString("N0")</span>
            </div>
        </div>
    </div>
</div>