@using Microsoft.AspNetCore.Http

<ul class="navbar-nav">
    @if (Context.Session.GetString("UserEmail") != null)
    {
        <li class="nav-item">
            <a class="nav-link" href="#" title="Manage">Xin chào, @Context.Session.GetString("UserFullName")!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link">Đăng xuất</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
    }
</ul>